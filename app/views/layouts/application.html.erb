<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render "layouts/rails_default" %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <% if @notice %>
      <p class="notice alert-info"><%= @notice %></p>
    <% end %>
    <% if @alert %>
      <p class="alert alert-danger"><%= @alert %></p>
    <% end %>
    <div class =  "container">
      <%= yield %>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
